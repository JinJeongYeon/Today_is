<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="12">

    <!-- [변수명/ID] 바로 밑에 접어둔 주석 확인 -->
    <!--
    [버튼]
    * 메인 버튼 : main_button
    * 메모 버튼 : memo_button
    * 일기 버튼 : diary_button
    * 통계 버튼 : chart_button
    * 설정 버튼 : settings_button
    * 공유 버튼 : share_button
    * 그룹 설정 버튼 : group_button
    * ToDo 추가 버튼 : add_button
    * 년/월 선택 스피너 : date_spinner_button
    [아이콘/이미지]
    * 메인 아이콘 : main_icon.png
    * 메모 아이콘 : memo_icon.png
    * 일기 아이콘 : diary_icon.png
    * 통계 아이콘 : chart_icon.png
    * 설정 아이콘 : settings_icon.png
    [프래그먼트]
    * main_Fragment
    [텍스트]
    * 상단바 날짜 표시 : date_textView
    -->

    <!-- 상단바 레이아웃 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="14">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">
            <TextView
                android:id="@+id/date_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="2021년 12월"/> <!-- 년/월 표시 -->
            <Button
                android:id="@+id/date_spinner_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/expand_icon"/> <!-- 년/월 선택 스피너 -->
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8">

        </LinearLayout> <!-- 빈 공간 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/share_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/share_icon"/>
        </LinearLayout> <!-- 공유 버튼 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/group_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/group_icon"/>
        </LinearLayout> <!-- 그룹 설정 버튼 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/add_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/add_icon"/>
        </LinearLayout> <!-- ToDo 추가 버튼 -->
    </LinearLayout>

    <!--
    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:name=""/>
    -->

    <!-- 달력, ToDo 레이아웃 여기서 작성x -> Framgent에 적용할 xml 새로 만들어서 작성 -->
    <!-- 임시로 추가해둔 부분 -->
    <!-- 달력 레이아웃, ToDo 레이아웃 개발할 때 지우기 -->
    <!--
    메인, 메모, 일기, 통계 모두 activity_main.xml, MainActivity.java에서 코드 작성
    -->
    <!--
    설정, 알림 시간, 그룹 편집, Todo 추가, 메모 추가 액티비티는 별도로 사용
    -->

    <!-- 달력 레이아웃 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--
            <fragment
                android:id="@+id/calendar_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="프래그먼트 관리할 클래스"/>
                -->
                <CalendarView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <!-- 캘린더뷰 임시로 넣어놓음 -> 개발할 때 프래그먼트 xml에 추가 -->
        </LinearLayout> <!-- ScrollView에는 하나의 View만 들어갈 수 있어서 리니어 레이아웃 추가 -->
    </ScrollView>

    <!-- ToDo 리스트 레이아웃 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">
        <!--
        <fragment
            android:id="@+id/todo_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="프래그먼트 관리할 클래스"/>
            -->
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <!-- 리사이클러뷰 임시로 넣어놓음 -> 개발할 때 프래그먼트 xml에 추가 -->
    </LinearLayout>

    <!-- 하단바 레이아웃 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="11">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/main_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/main_icon"/>
        </LinearLayout><!-- 메인 버튼 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/memo_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/memo_icon"/>
        </LinearLayout><!-- 메모 버튼 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/diary_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/diary_icon"/>
        </LinearLayout><!-- 일기 버튼 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/chart_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/chart_icon"/>
        </LinearLayout><!-- 통계 버튼 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/settings_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/settings_icon"/>
        </LinearLayout><!-- 설정 버튼 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>