<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_time_fragment_dialog"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/><!-- 빈 공간 -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10">
            <NumberPicker
                android:id="@+id/hour_numberPicker"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="시"
                android:textSize="15dp"
                android:gravity="center"/>
            <NumberPicker
                android:id="@+id/minute_numberPicker"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="분"
                android:textSize="15dp"
                android:gravity="center"/>
        </LinearLayout><!-- 시 분 선택 넘버피커 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <Button
                    android:id="@+id/okay_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00FF0000"
                    android:text="확인"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:gravity="center"/>
            </LinearLayout><!-- 확인 버튼 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00FF0000"
                    android:text="취소"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:gravity="center"/>
            </LinearLayout><!-- 취소 버튼 -->
        </LinearLayout><!-- 확인 취소 버튼 -->

    </LinearLayout><!-- 시 분 선택 넘버피커, 확인 취소 -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/><!-- 빈 공간 -->

</LinearLayout>